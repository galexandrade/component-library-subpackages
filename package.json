{
    "name": "component-library-subpackages",
    "version": "2.18.0",
    "description": "Learning how to export sub packages in a component library",
    "author": "7shifts",
    "license": "MIT",
    "private": true,
    "main": "dist/index.js",
    "module": "dist/index.modern.js",
    "source": "src/index.ts",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "build": "yarn run build:icons && yarn run build:core",
        "build:core": "microbundle-crl --format modern,cjs",
        "build:icons": "cd icons && microbundle-crl --tsconfig icons/tsconfig.json --format modern,cjs",
        "prebuild:check": "yarn build",
        "build:check": "source-map-explorer dist/index.js dist/index.js.map",
        "build:icons:check": "source-map-explorer icons/dist/index.js icons/dist/index.js.map",
        "watch": "microbundle-crl --watch --format modern,cjs"
    },
    "workspaces": [
        "icons"
    ],
    "dependencies": {
        "icons": "*"
    },
    "peerDependencies": {
        "react": ">16.0.0",
        "react-dom": ">16.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.16.7",
        "@babel/plugin-transform-regenerator": "^7.16.7",
        "@types/node": "^12.12.38",
        "@types/react": "^16.9.27",
        "@types/react-dom": "^16.9.7",
        "babel-eslint": "^10.0.3",
        "babel-loader": "^8.2.3",
        "cross-env": "^7.0.2",
        "microbundle-crl": "^0.13.10",
        "prettier": "^2.0.4",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "sass": "^1.48.0",
        "sass-loader": "10.1.1",
        "source-map-explorer": "^2.5.3",
        "typescript": "^3.7.5"
    },
    "files": [
        "dist",
        "icons"
    ]
}
